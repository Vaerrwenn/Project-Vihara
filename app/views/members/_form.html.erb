<%= simple_form_for @member, defaults: { wrapper_html: { class: 'row' } } do |f| %>
    <%= f.input :name, 
        label: 'Nama', 
        error: "Nama harus diisi dan lebih dari 2 karakter!" %>
    <%= f.input :cetya, 
        label: 'Cetya', 
        error: "Cetya harus diisi!", 
        as: :select, 
        collection:[['Harmonis', 'Harmonis'], ['Makmur', 'Makmur'], ['Mandiri', 'Mandiri'], 
    ['Persatuan', 'Persatuan'], ['Sayang', 'Sayang'], ['Sehati', 'Sehati'], ['Sungguh Hati', 'Sungguh Hati']] %>
    <%= f.input :account_number,
        label: 'Nomor Rekening',
        input_html: { onkeydown: "phoneNumCheck(event)" } %>
    <%= f.input :phone, 
        label: 'Nomor HP:', 
        input_html: { onkeydown: "phoneNumCheck(event)" } %>
    <%= f.button :submit, 'Simpan', 
        class: 'row btn btn-primary' %>
<% end %>
