<%= simple_form_for [@member, @member.transactions.build] do |f| %>
<div class="modal-body">
    <%= f.input :withdraw_or_deposit, label: 'Jenis Transaksi', error: "Jenis Transaksi harus dipilih", as: :select,
    collection: [['Pemasukan', 'Pemasukan'], ['Pengeluaran', 'Pengeluaran']] %>
    <%= f.input :transaction_type, label: 'Jenis Tabungan', error: "Jenis Tabungan harus dipilih!", as: :select,
    collection: [['Tabungan Kegiatan', 'Tabungan Kegiatan'], ['Tabungan Tozan', 'Tabungan Tozan']] %>
    <%= f.input :receipt_no, label: 'Nomor Kwitansi', error: 'Nomor Kwitansi harus diisi!' %>
    <%= f.input :currency, label: 'Mata Uang', error: "Mata Uang harus dipilih!", as: :select,
    collection: [['IDR', 'IDR'], ['USD', 'USD'], ['JPY', 'JPY'], ['SGD', 'SGD'],
    ['Lainnya (Diberitahu di Deskripsi)', 'Lainnya (Diberitahu di Deskripsi)']], 
    input_html: { style: "width = 20%;" } %>
    <%= f.input :money_value, label: 'Jumlah', error: "Jumlah harus diisi!",
    input_html: { onkeydown: "phoneNumCheck(event)"} %>
    <%= f.input :desc, label: 'Deskripsi' %>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-danger" data-dismiss="modal">Batal</button>
    <%= f.button :submit, "Simpan", class: "btn btn-primary" %>
</div>
<% end %>

<script>
    function phoneNumCheck(e) {
        var input = e.key
        var regex = /([^\d+])/
        if (regex.test(input) && e.which != 8) {
            e.preventDefault()
        }
    }
</script>